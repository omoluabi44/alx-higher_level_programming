#!/usr/bin/python3

import sys
import MySQLdb

if __name__ == "__main__":
    db = MySQLdb.connect(
        host="localhost",
        user=sys.argv[1],
        passwd=sys.argv[2],
        db=sys.argv[3],
        port=3306
        )

    cursor = db.cursor()

    slq = "SELECT * FROM states WHERE name LIKE %s ORDER BY id ASC"
    cursor.execute(slq, (sys.argv[4],))
    for i in cursor.fetchall():
        print(i)

    cursor.close()
    db.close()
